{% extends 'forumbanner.html.twig' %}
{% block content %}
    <div id="page-content-div" class="cent">
        <h2>{{ page_heading_2 }}</h2>
        <div class="table">
            <div class="table-row">
                <div class="post-l-table-head">Users</div>
                <div class="post-r-table-head">Content</div>
            </div>

            {% if replies %}
                {% for reply in replies %}
                    <div class="table-row">
                        <div class="post-l-table-cell">{{ reply.userusername }} . {{reply.replydate}}</div>
                        <div class="post-r-table-cell">{{ reply.replycontent}}</div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
		<hr>
		<h2>{{ page_heading_3 }}</h2>
	    <form method={{method}} action={{action}}>
	      <textarea rows="5" cols="50" name="reply-content" size="10" required></textarea>
		  <br>
	      <input type="submit" value="submit reply">
	    </form>
    </div>
{% endblock %}