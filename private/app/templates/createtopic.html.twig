{% extends 'forumbanner.html.twig' %}
{% block content %}
     <div id="page-content-div">
    <form action="{{ action }}" method ="{{ method }}">
        <h3>{{ page_heading_2 }}</h3>
        <fieldset>
            <p>{{ page_text }}</p>

            <label for="subname">Subject:</label> <input id="subname" type="text" name="subname" size="10" required>
            <br>
            <label for="catname">Category:</label> 
			<select name="catid">
                  {% for category in categories %}
				  <option value={{ category.categoryid }}>{{ category.categoryname }}</option>
				{% endfor %}
            </select>
			<br>
			<label for="message">Message:</label>
            <textarea rows = "5" cols = "50" name = "message" size="10" required></textarea>
            <hr>
            <input type="submit" value="send">
        </fieldset>
    </form>
    </div>
{% endblock %}