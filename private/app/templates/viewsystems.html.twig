{% extends 'banner.html.twig' %}
{% block content %}
    <div class="cent">
        <h2>{{ page_heading_2 }}</h2>
        <div id="page-content-div">
            <div class="table">
                <div class="table-row">
                    <div class="reverse-l-table-head">System</div>
                    <div class="reverse-r-table-head">Summary</div>
                </div>

                {% if systems %}
                    {% for system in systems %}
                        <div class="table-row">
                            <div class="reverse-l-table-cell"><a href="viewsystem.php?id">. {{ system.systemid }}</a>{{ system.systemname }}</div>
                            <div class="reverse-r-table-cell">{{ system.systemsummary }}</div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>

        </div>
    </div>
{% endblock %}